doctype html
html(lang='fr')
  head
    meta(charset='UTF-8')
    title OnlineShop - #{title}
    link(rel='stylesheet', type='text/css', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css')
    link(rel='stylesheet', type='text/css', href='/assets/css/style.css')
  body
    header
      block header
        .header-container
          .logo
            a(href='/accueil')
              img(alt='logo', src='/assets/img/logo.svg', title='Accueil')
          nav
            ul
              li(class=(title === "Accueil" ? "active" : undefined))
                a(href='/accueil') Accueil
              li(class=(title === "Produits" ? "active" : undefined))
                a(href='/produits') Produits
              li(class=(title === "Contact" ? "active" : undefined))
                a(href='/contact') Contact
              //- li(class=(title === "Panier" ? "active" : undefined))
              li
                a.shopping-cart(href='/panier', title='Panier')
                  span.fa-stack.fa-lg
                    i.fa.fa-circle.fa-stack-2x.fa-inverse
                    i.fa.fa-shopping-cart.fa-stack-1x
                  span.count(class=(cartCount > 0 ? "visible" : undefined)) #{cartCount}
    main
      block content
    //- Content goes here
    //- block something something
